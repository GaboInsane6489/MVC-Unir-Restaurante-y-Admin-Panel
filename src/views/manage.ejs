<!DOCTYPE html>
<html lang="es">
<%- include("partials/head") %>

    <body class="bg-gray-100 p-6">
        <h1 class="text-2xl font-bold mb-4">Gestionar pedidos</h1>
        <a href="/" class="text-blue-600 underline mb-4 inline-block">← Volver</a>

        <ul class="space-y-4">
            <% customers.forEach(customer=> { %>
                <li class="bg-white p-4 rounded shadow">
                    <h2 class="font-semibold">
                        <%= customer.name %>
                    </h2>
                    <button data-id="<%= customer._id %>" class="btn-show bg-sky-600 text-white px-3 py-1 rounded mt-2">
                        Ver pedidos
                    </button>
                    <!-- Contenedor donde se insertarán las órdenes -->
                    <div id="orders-<%= customer._id %>" class="mt-3 space-y-2"></div>
                </li>
            <% }) %>
        </ul>

        <script>
            /* Cargar y pintar pedidos via fetch */
            document.querySelectorAll('.btn-show').forEach(btn => {
                btn.onclick = async () => { // Asignamos un evento click a cada botón.
                    const id = btn.dataset.id; // Obtenemos el _id del cliente desde el atributo data-id del botón.
                    const res = await fetch(`/api/orders/customer/${id}`); // Hacemos una petición a la API para obtener las órdenes del cliente con ese _id.
                    const orders = await res.json(); // Convertimos la respuesta a JSON.
                    const container = document.getElementById('orders-' + id); // Obtenemos el contenedor donde se mostrarán las órdenes del cliente.
                    container.innerHTML = ''; // Limpiamos el contenedor antes de mostrar las órdenes.
                    orders.forEach(o => { // Iteramos sobre cada orden obtenida.
                        const color = o.status === 'todo' ? 'bg-yellow-200' // Asignamos un color de fondo según el estado de la orden.
                            : o.status === 'done' ? 'bg-blue-200'
                                : 'bg-green-200';
                        // Añadimos un div con la información de la orden al contenedor.
                        container.innerHTML += `
            <div class="${color} p-2 rounded flex justify-between items-center">
                #${o._id.slice(-4)} — ${o.description} (${o.status})
                <form action="/orders/${o._id}/status" method="POST">
                <select name="status" class="border">
                    <option ${o.status === 'todo' ? 'selected' : ''}>todo</option>
                    <option ${o.status === 'done' ? 'selected' : ''}>done</option>
                    <option ${o.status === 'delivered' ? 'selected' : ''}>delivered</option>
                </select>
                <button class="bg-gray-700 text-white px-2">✓</button>
                </form>
            </div>`;
                    });
                };
            });
        </script>
    </body>

</html>