<!DOCTYPE html>
<html lang="es">
<%- include("partials/head") %>

    <body class="bg-gray-100 p-6">
        <h1 class="text-2xl font-bold mb-4">Gestionar pedidos</h1>
        <a href="/" class="text-blue-600 underline mb-4 inline-block">← Volver</a>

        <ul class="space-y-4">
            <% customers.forEach(customer=> { %>
                <li class="bg-white p-4 rounded shadow">
                    <h2 class="font-semibold">
                        <%= customer.name %>
                    </h2>
                    <button data-id="<%= customer._id %>" class="btn-show bg-sky-600 text-white px-3 py-1 rounded mt-2">
                        Ver pedidos
                    </button>
                    <!-- Contenedor donde se insertarán las órdenes -->
                    <div id="orders-<%= customer._id %>" class="mt-3 space-y-2"></div>
                </li>
            <% }) %>
        </ul>

        <script>
            /* Cargar y pintar pedidos via fetch */
            document.querySelectorAll('.btn-show').forEach(btn => {
                btn.onclick = async () => {
                    try {
                        const id = btn.dataset.id;
                        const res = await fetch(`/api/orders/customer/${id}`);

                        // ✅ Solo una vez
                        const data = await res.json();

                        const container = document.getElementById('orders-' + id);
                        container.innerHTML = '';

                        if (!data.success || !Array.isArray(data.orders)) {
                            container.innerHTML = `<div class="text-red-500">No se encontraron órdenes para este cliente.</div>`;
                            return;
                        }

                        data.orders.forEach(o => {
                            const color = o.status === 'todo' ? 'bg-yellow-200'
                            : o.status === 'done' ? 'bg-blue-200'
                            : 'bg-green-200';

                            container.innerHTML += `
                                <div class="${color} p-2 rounded flex justify-between items-center">
                                    #${o._id.slice(-4)} — ${o.description} (${o.status})
                                    <form action="/orders/${o._id}/status" method="POST">
                                        <select name="status" class="border">
                                            <option ${o.status === 'todo' ? 'selected' : ''}>todo</option>
                                            <option ${o.status === 'done' ? 'selected' : ''}>done</option>
                                            <option ${o.status === 'delivered' ? 'selected' : ''}>delivered</option>
                                        </select>
                                        <button class="bg-gray-700 text-white px-2">✓</button>
                                    </form>
                                </div>
                            `;
                        });
                    } catch (err) {
                        console.error("Error al obtener órdenes:", err);
                        alert("Hubo un problema al cargar las órdenes.");
                    }
                };
            });
        </script>
    </body>

</html>